        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Übersicht und Statistiken",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icon-dashboard.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Verlauf",
      "short_name": "History",
      "description": "Abfragenverlauf einsehen",
      "url": "/history",
      "icons": [
        {
          "src": "/icon-history.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": [".json", "application/json"]
        }
      ]
    }
  },
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+ifc",
      "url": "/upload?from=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "application/json": [".json"],
        "text/json": [".json"]
      }
    }
  ],
  "handle_links": "preferred",
  "id": "ifc-json-chunking",
  "iarc_rating_id": "",
  "features": [
    "offline-support",
    "background-sync",
    "push-notifications",
    "file-handling",
    "share-target"
  ],
  "developer": {
    "name": "IFC JSON Chunking Team",
    "url": "https://github.com/ifc-json-chunking"
  },
  "version": "1.0.0",
  "permissions": [
    "storage",
    "background-sync",
    "push",
    "file-system-access"
  ],
  "custom": {
    "offline_first": true,
    "analytics_enabled": true,
    "auto_update": true,
    "cache_strategy": "network-first-api",
    "supported_file_types": ["json"],
    "max_file_size": "100MB",
    "supported_languages": ["de", "en"]
  }
}